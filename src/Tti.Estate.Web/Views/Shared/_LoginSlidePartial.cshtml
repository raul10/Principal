@using System.Security.Principal

@if (User.Identity.IsAuthenticated)
    {
<div class="user-profile d-flex no-block dropdown mt-3">
    <div class="user-pic"><img src="/admin-layout/assets/images/users/1.jpg" alt="users" class="rounded-circle" width="40" /></div>
    <div class="user-content hide-menu ml-2">
        <a href="javascript:void(0)" class="" id="Userdd" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <h5 class="mb-0 user-name font-medium">@User.Identity.Name <i class="fa fa-angle-down"></i></h5>
            @*<span class="op-5 user-email"><span class="__cf_email__" data-cfemail="eb9d8a999e85ab8c868a8287c5888486">[email&#160;protected]</span></span>*@
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="Userdd">
            <a class="dropdown-item" href="javascript:void(0)"><i class="ti-user mr-1 ml-1"></i> @Localizer["MyProfile"]</a>
            <a class="dropdown-item" href="javascript:void(0)"><i class="ti-wallet mr-1 ml-1"></i> @Localizer["MyBalance"]</a>
            <a class="dropdown-item" href="javascript:void(0)"><i class="ti-email mr-1 ml-1"></i> @Localizer["Inbox"]</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="javascript:void(0)"><i class="ti-settings mr-1 ml-1"></i> @Localizer["AccountSetting"]</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout" title="@Localizer["SignOut"]"><i class="fa fa-power-off mr-1 ml-1"></i> @Localizer["SignOut"]</a>
        </div>
    </div>
</div>
  }